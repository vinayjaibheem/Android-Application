<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.knowledge.quickassistance.EngineerProfileRegistration"
    tools:showIn="@layout/activity_engineer_profile_registration"
    android:background="@drawable/background">


    <LinearLayout
        android:layout_width="500dp"
        android:layout_height="50dp"
        android:layout_centerHorizontal="true"
        android:id="@+id/TechnicianlinearLayout"
        android:weightSum="1">

        <ImageView
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:id="@+id/imageView11"
            android:src="@drawable/icon"/>

        <TextView
            android:layout_width="490dp"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Engineer Registration"
            android:layout_marginLeft="10dp"
            android:id="@+id/Engineer_Registration"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:textStyle="bold"
            android:textColor="#B3E5FC"
            android:layout_marginTop="20dp" />
    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="380dp"
        android:id="@+id/scrollView"
        android:layout_below="@+id/TechnicianlinearLayout">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="First name"
                    android:id="@+id/Engineer_Profile_Registration_FirstName"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_marginTop="20dp"
                    android:textColor="#B3E5FC"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="Last Name"
                    android:id="@+id/Engineer_Profile_Registration_LastName"
                    android:layout_marginTop="20dp"
                    android:layout_below="@+id/Engineer_Profile_Registration_FirstName"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:textColor="#B3E5FC"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="Email id"
                    android:id="@+id/Engineer_Profile_Registration_EmailId"
                    android:layout_below="@+id/Engineer_Profile_Registration_LastName"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_marginTop="20dp"
                    android:textColor="#B3E5FC"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="Contact"
                    android:id="@+id/Engineer_Profile_Registration_Contact"
                    android:layout_below="@+id/Engineer_Profile_Registration_EmailId"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_marginTop="20dp"
                    android:textColor="#B3E5FC"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="Username"
                    android:id="@+id/Engineer_Profile_Registration_UserName"
                    android:layout_below="@+id/LoginContent_BaseFareTextView"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_marginTop="20dp"
                    android:textColor="#B3E5FC"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="Password"
                    android:id="@+id/Engineer_Profile_Registration_PassWord"
                    android:layout_below="@+id/Engineer_Profile_Registration_UserName"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_marginTop="20dp"
                    android:textColor="#B3E5FC"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="Confirm Password"
                    android:id="@+id/Engineer_Profile_Registration_ConfirmPassword"
                    android:layout_below="@+id/Engineer_Profile_Registration_PassWord"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_marginTop="20dp"
                    android:textColor="#B3E5FC"
                    android:textStyle="bold" />

                <EditText
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:inputType="textPersonName"
                    android:textColor="#4FC3F7"
                    android:ems="10"
                    android:id="@+id/Engineer_Profile_Registration_FirstName_TextField"
                    android:layout_toRightOf="@+id/Engineer_Profile_Registration_ConfirmPassword"
                    android:layout_toEndOf="@+id/Engineer_Profile_Registration_ConfirmPassword"
                    android:layout_marginTop="1dp" />

                <EditText
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:inputType="textPersonName"
                    android:textColor="#4FC3F7"
                    android:ems="10"
                    android:id="@+id/Engineer_Profile_Registration_LastName_TextField"
                    android:layout_below="@+id/Engineer_Profile_Registration_FirstName"
                    android:layout_alignLeft="@+id/Engineer_Profile_Registration_FirstName_TextField"
                    android:layout_alignStart="@+id/Engineer_Profile_Registration_FirstName_TextField" />

                <EditText
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:inputType="textEmailAddress"
                    android:textColor="#4FC3F7"
                    android:ems="10"
                    android:id="@+id/Engineer_Profile_Registration_EmailId_TextField"
                    android:layout_below="@+id/Engineer_Profile_Registration_LastName"
                    android:layout_alignLeft="@+id/Engineer_Profile_Registration_LastName_TextField"
                    android:layout_alignStart="@+id/Engineer_Profile_Registration_LastName_TextField" />

                <EditText
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:inputType="phone"
                    android:textColor="#4FC3F7"
                    android:ems="10"
                    android:id="@+id/Engineer_Profile_Registration_Contact_TextField"
                    android:layout_below="@+id/Engineer_Profile_Registration_EmailId_TextField"
                    android:layout_alignRight="@+id/Engineer_Profile_Registration_EmailId_TextField"
                    android:layout_alignEnd="@+id/Engineer_Profile_Registration_EmailId_TextField"
                    android:layout_alignLeft="@+id/Engineer_Profile_Registration_EmailId_TextField"
                    android:layout_alignStart="@+id/Engineer_Profile_Registration_EmailId_TextField" />

                <EditText
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:inputType="textPassword"
                    android:textColor="#4FC3F7"
                    android:ems="10"
                    android:id="@+id/Engineer_Profile_Registration_PassWord_TextField"
                    android:layout_below="@+id/Engineer_Profile_Registration_UserName"
                    android:layout_alignLeft="@+id/Engineer_Profile_Registration_Contact_TextField"
                    android:layout_alignStart="@+id/Engineer_Profile_Registration_Contact_TextField" />

                <EditText
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:inputType="textEmailAddress"
                    android:textColor="#4FC3F7"
                    android:ems="10"
                    android:id="@+id/Engineer_Profile_Registration_UserName_TextField"
                    android:layout_below="@+id/LoginContent_BaseFareTextField"
                    android:layout_alignLeft="@+id/Engineer_Profile_Registration_Contact_TextField"
                    android:layout_alignStart="@+id/Engineer_Profile_Registration_Contact_TextField" />

                <EditText
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:inputType="textPassword"
                    android:textColor="#4FC3F7"
                    android:ems="10"
                    android:id="@+id/Engineer_Profile_Registration_ConfirmPassword_TextField"
                    android:layout_below="@+id/Engineer_Profile_Registration_PassWord_TextField"
                    android:layout_alignRight="@+id/Engineer_Profile_Registration_PassWord_TextField"
                    android:layout_alignEnd="@+id/Engineer_Profile_Registration_PassWord_TextField"
                    android:layout_toRightOf="@+id/Engineer_Profile_Registration_ConfirmPassword"
                    android:layout_toEndOf="@+id/Engineer_Profile_Registration_ConfirmPassword" />


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="Address"
                    android:id="@+id/LoginContent_AddressTextView"
                    android:layout_below="@+id/Engineer_Profile_Registration_Contact"
                    android:layout_alignParentLeft="true"
                    android:layout_marginTop="20dp"
                    android:textColor="#B3E5FC"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="City"
                    android:id="@+id/LoginContent_CityTextView"
                    android:layout_marginTop="20dp"
                    android:layout_below="@+id/LoginContent_AddressTextView"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:textColor="#B3E5FC"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="State"
                    android:id="@+id/LoginContent_StateTextView"
                    android:layout_below="@+id/LoginContent_CityTextView"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_marginTop="20dp"
                    android:textColor="#B3E5FC"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="Zipcode"
                    android:id="@+id/LoginContent_PincodeTextView"
                    android:layout_below="@+id/LoginContent_StateTextView"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_marginTop="20dp"
                    android:textColor="#B3E5FC"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="Experience"
                    android:id="@+id/LoginContent_ExperienceTextView"
                    android:layout_below="@+id/LoginContent_PincodeTextView"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_marginTop="20dp"
                    android:textColor="#B3E5FC"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="Expertise"
                    android:id="@+id/LoginContent_ExpertiseTextView"
                    android:layout_below="@+id/LoginContent_ExperienceTextView"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_marginTop="20dp"
                    android:textColor="#B3E5FC"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="Country"
                    android:id="@+id/LoginContent_BaseFareTextView"
                    android:layout_below="@+id/LoginContent_ExpertiseTextView"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_marginTop="20dp"
                    android:textColor="#B3E5FC"
                    android:textStyle="bold" />

                <EditText
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:inputType="textPersonName"
                    android:ems="10"
                    android:id="@+id/LoginContent_AddressTextField"
                    android:layout_below="@+id/Engineer_Profile_Registration_Contact_TextField"
                    android:textColor="#4FC3F7"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentEnd="true"
                    android:layout_toRightOf="@+id/Engineer_Profile_Registration_ConfirmPassword"
                    android:layout_toEndOf="@+id/Engineer_Profile_Registration_ConfirmPassword" />

                <EditText
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:inputType="textPersonName"
                    android:ems="10"
                    android:textColor="#4FC3F7"
                    android:id="@+id/LoginContent_CityTextField"
                    android:layout_below="@+id/LoginContent_AddressTextView"
                    android:layout_alignLeft="@+id/LoginContent_AddressTextField"
                    android:layout_alignStart="@+id/LoginContent_AddressTextField"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentEnd="true" />

                <EditText
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:inputType="textPersonName"
                    android:ems="10"
                    android:textColor="#4FC3F7"
                    android:id="@+id/LoginContent_StateTextField"
                    android:layout_below="@+id/LoginContent_CityTextView"
                    android:layout_alignLeft="@+id/LoginContent_CityTextField"
                    android:layout_alignStart="@+id/LoginContent_CityTextField"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentEnd="true" />

                <EditText
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:inputType="textPersonName"
                    android:ems="10"
                    android:textColor="#4FC3F7"
                    android:id="@+id/LoginContent_PincodeTextField"
                    android:layout_below="@+id/LoginContent_StateTextField"
                    android:layout_alignRight="@+id/LoginContent_StateTextField"
                    android:layout_alignEnd="@+id/LoginContent_StateTextField"
                    android:layout_alignLeft="@+id/LoginContent_StateTextField"
                    android:layout_alignStart="@+id/LoginContent_StateTextField" />

                <Spinner
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:inputType="textPersonName"
                    android:background="@drawable/background_color"
                    android:alpha="0.5"
                    android:ems="10"
                    android:spinnerMode="dropdown"
                    android:layout_marginTop="20dp"
                    android:dropDownSelector="#B3E5FC"
                    android:dropDownWidth="wrap_content"
                    android:id="@+id/LoginContent_Expertise"
                    android:layout_below="@+id/LoginContent_ExperienceTextView"
                    android:layout_alignLeft="@+id/LoginContent_PincodeTextField"
                    android:layout_alignStart="@+id/LoginContent_PincodeTextField"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentEnd="true" />

                <EditText
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:inputType="textPersonName"
                    android:textColor="#4FC3F7"
                    android:ems="10"
                    android:id="@+id/LoginContent_ExperienceTextField"
                    android:layout_below="@+id/LoginContent_PincodeTextView"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentEnd="true"
                    android:layout_toEndOf="@+id/Engineer_Profile_Registration_ConfirmPassword"
                    android:layout_toRightOf="@+id/Engineer_Profile_Registration_ConfirmPassword" />

                <EditText
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:inputType="textPersonName"
                    android:textColor="#4FC3F7"
                    android:ems="10"
                    android:id="@+id/LoginContent_BaseFareTextField"
                    android:layout_below="@+id/LoginContent_Expertise"
                    android:layout_alignRight="@+id/LoginContent_Expertise"
                    android:layout_alignEnd="@+id/LoginContent_Expertise"
                    android:layout_toEndOf="@+id/Engineer_Profile_Registration_ConfirmPassword"
                    android:layout_toRightOf="@+id/Engineer_Profile_Registration_ConfirmPassword" />

            </RelativeLayout>
        </LinearLayout>
    </ScrollView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/scrollView"
        android:weightSum="1">

        <Button
            android:id="@+id/LoginContent_RegisterButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginTop="15dp"
            android:background="@drawable/mybutton"
            android:onClick="engineerRegistration"
            android:text="complete"
            android:textColor="#ffffff"
            android:textStyle="bold" />
    </LinearLayout>


</RelativeLayout>