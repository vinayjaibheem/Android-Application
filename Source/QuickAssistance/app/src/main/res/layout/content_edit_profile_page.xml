<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.knowledge.quickassistance.EditProfile"
    tools:showIn="@layout/activity_edit_profile_page"
    android:background="@drawable/background">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="User Profile"
        android:textColor="#B3E5FC"
        android:id="@+id/textView9"
        android:textSize="28dp"
        android:layout_marginTop="15dp"
        android:layout_alignParentTop="true"
        android:textStyle="bold" />
    <!--android:layout_centerHorizontal="true"-->

    <ImageView
        android:layout_width="250dp"
        android:layout_height="150dp"
        android:scaleType="fitXY"
        android:id="@+id/imageView7"
        android:layout_toRightOf="@+id/textView9"
        android:layout_toEndOf="@+id/textView9" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Username   : "
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
        android:id="@+id/textView10"
        android:layout_above="@+id/ForgotPasswordUserNameTextView"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textSize="20dp"
        android:textColor="#B3E5FC" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/EditProfileUserName"
        android:textColor="#4FC3F7"
        android:textSize="20dp"
        android:layout_marginBottom="-7dp"
        android:layout_alignBaseline="@+id/textView10"
        android:layout_alignBottom="@+id/textView10"
        android:layout_alignParentEnd="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="First Name  : "
        android:id="@+id/ForgotPasswordUserNameTextView"
        android:layout_above="@+id/textView12"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textSize="20dp"
        android:textColor="#B3E5FC" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:textColor="#B3E5FC"
        android:ems="10"
        android:id="@+id/EditProfileFirstName"
        android:layout_marginTop="-10dp"
        android:layout_above="@+id/EditProfile_LastName"
        android:layout_alignLeft="@+id/EditProfileUserName"
        android:layout_alignStart="@+id/EditProfileUserName" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
        android:id="@+id/textView12"
        android:layout_above="@+id/textView13"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textColor="#B3E5FC"
        android:text="Last Name  :"
        android:textSize="20dp" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:textColor="#B3E5FC"
        android:ems="10"
        android:id="@+id/EditProfile_LastName"
        android:layout_above="@+id/ForgotPasswordUserName"
        android:layout_alignLeft="@+id/EditProfileFirstName"
        android:layout_alignStart="@+id/EditProfileFirstName" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Emaid ID     :"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
        android:id="@+id/textView13"
        android:layout_above="@+id/textView14"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textSize="20dp"
        android:textColor="#B3E5FC" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textEmailAddress"
        android:textColor="#B3E5FC"
        android:ems="10"
        android:id="@+id/ForgotPasswordUserName"
        android:layout_marginBottom="-7dp"
        android:layout_above="@+id/EditProfileContact"
        android:layout_alignBottom="@+id/textView13"
        android:layout_alignLeft="@+id/EditProfile_LastName"
        android:layout_alignStart="@+id/EditProfile_LastName" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Contact       :"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
        android:id="@+id/textView14"
        android:layout_above="@+id/button310"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textColor="#B3E5FC"
        android:textSize="20dp"/>

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="phone"
        android:textColor="#B3E5FC"
        android:ems="10"
        android:id="@+id/EditProfileContact"
        android:layout_marginBottom="-7dp"
        android:layout_above="@+id/button310"
        android:layout_alignLeft="@+id/ForgotPasswordUserName"
        android:layout_alignStart="@+id/ForgotPasswordUserName" />

    <Button
        android:id="@+id/button310"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/mybutton"
        android:onClick="change"
        android:text="Change Profile Pic"
        android:textColor="#ffffff"
        android:textStyle="bold"
        android:layout_marginBottom="26dp"
        android:layout_above="@+id/ForgotPasswordSendButton"
        android:layout_alignParentEnd="true" />

    <Button
        android:id="@+id/ForgotPasswordSendButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/mybutton"
        android:onClick="ChangePassword"
        android:text="Change Password"
        android:textColor="#ffffff"
        android:textStyle="bold"
        android:layout_above="@+id/button2"
        android:layout_alignParentEnd="true"
        android:layout_marginBottom="23dp" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Update Profile"
        android:id="@+id/button2"
        android:background="@drawable/mybutton"
        android:textColor="#ffffff"
        android:onClick="UpdateProfile"
        android:textStyle="bold"
        android:layout_alignParentBottom="true"
        android:layout_alignEnd="@+id/ForgotPasswordSendButton" />

</RelativeLayout>