<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <TextView
        android:layout_width="135dp"
        android:layout_height="75dp"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Technician Name"
        android:id="@+id/TechnicianNametextView"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:gravity="center" />

    <TextView
        android:layout_width="90dp"
        android:layout_height="75dp"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Experience"
        android:id="@+id/ExperiencetextView"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/TechnicianNametextView"
        android:layout_toEndOf="@+id/TechnicianNametextView"
        android:gravity="center" />

    <TextView
        android:layout_width="70dp"
        android:layout_height="75dp"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Base Charges"
        android:id="@+id/BaseChargestextView"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:gravity="center" />

    <TextView
        android:layout_width="90dp"
        android:layout_height="75dp"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Ratings"
        android:id="@+id/RatingstextView"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/ExperiencetextView"
        android:layout_toLeftOf="@+id/BaseChargestextView"
        android:layout_toStartOf="@+id/BaseChargestextView"
        android:gravity="center" />

</RelativeLayout>